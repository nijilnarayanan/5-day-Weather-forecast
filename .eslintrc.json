{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true,
				"semi": false,
				"singleQuote": true,
				"jsxSingleQuote": true,
				"trailingComma": "all",
				"jsxBracketSameLine": false,
				"arrowParens": "always"
			}
		]
	}
}
